<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/information", user: @user %>
    <% if @user == current_user %>
      <%= render "layouts/edit", user: @user %>
    <% else %>
    <div class="row">
      <%= render partial: "relationships/followbtn", locals: {user: @user} %>
    </div>
    <% end %>
      <%= render "layouts/form", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book|%>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image_icon.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book %></td>
            <td><%= book.body %></td>
            <% if book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger" %></td>
            <td id="favorite_buttons_<%= book.id %>"><%= render "favorites/favorite-btn", book: book %></td>
            <% end %>
            <td>コメント数：<%= book.book_comments.count %></td>
            <td>閲覧数:<%= book.view_counts.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <h1>7日間分の投稿数</h1>
      <table class="table table-bordered">
        <thead>
          <tr>
            <% 6.downto(1) do |x| %>
              <th><%= x %>日前</th>
            <% end %>
              <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @books.past_week_count.each do |c| %>
              <td><%= c %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <canvas id="myLineChart"></canvas>
      <script>
        $(document).on('turbolinks:load', function() {
          var ctx = document.getElementById("myLineChart");
          var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
              datasets: [
                {
                  label: '投稿した本の数',
                  data: <%= @books.past_week_count %>,
                  borderColor: "rgba(0,0,255,1)",
                  backgroundColor: "rgba(0,0,0,0)"
                }
              ],
            },
            options: {
              title: {
                display: true,
                text: '7日間の投稿数の比較'
              },
              scales: {
                yAxes: [{
                  ticks: {
                    suggestedMax: 10,
                    suggestedMin: 0,
                    stepSize: 1,
                    callback: function(value, index, values){
                      return  value
                    }
                  }
                }]
              },
            }
          });
        });
      </script>
    </div>
  </div>
</div>
