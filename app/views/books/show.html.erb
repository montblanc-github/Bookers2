<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/information', user: @user %>
    <% if @user == current_user %>
      <%= render 'layouts/edit', user: @user %>
    <% else %>
      <%= render 'relationships/followbtn', user: @user %>
    <% end %>
      <%= render 'layouts/form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image_icon.jpg" %></br>
                  <%= @user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <td id="favorite_buttons_<%= @book.id %>"><%= render "favorites/favorite-btn", book: @book %></td>
              <td>コメント数：<%= @book.book_comments.count %></td>
              <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, class: "btn btn-sm btn-danger" %></td>
              <% end %>
            </tr>
        </tbody>
      </table>
      <% @book_comments.each do |book_comment|%>
      <table>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user.id) do %>
                <%= attachment_image_tag book_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image_icon.jpg" %></br>
                <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
            <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <% end %>
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class: "form-control",　size:"90x5" %>
        </div>
        <div class="form-group">
          <%= f.submit "送信" %>
        </div>
      <% end %>
    </div>
  </div>
</div>