<% if current_user.following?(user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-info inline-block" %>
  <% if current_user.following?(user) && user.following?(current_user) && (current_user != user) %>
      <%= link_to "chatを始める", message_path(user.id), class: "btn btn-link" %>
  <% end %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
<% end %>